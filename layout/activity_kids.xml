<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shoe Palace"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subheading TextView -->
    <TextView
        android:id="@+id/subheadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop Your Favourite Products"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Products Heading TextView -->
    <TextView
        android:id="@+id/productsHeadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Products"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />
    <GridView
        android:id="@+id/gridViewMen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:padding="16dp" />
    <ListView
        android:id="@+id/listViewKids"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
