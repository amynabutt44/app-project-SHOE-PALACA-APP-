<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name here"
        android:inputType="text"/>

    <EditText
        android:id="@+id/input_rollnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Roll No here"
        android:inputType="text"/>

    <EditText
        android:id="@+id/input_cgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter cgpa here"
        android:inputType="text"/>
    <EditText
        android:id="@+id/input_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Age  here"
        android:inputType="text"/>
    <Button
        android:id="@+id/button_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Student"
        android:backgroundTint="@color/green"/>

    <Button
        android:id="@+id/button_example1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All"
        android:backgroundTint="@color/green"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>